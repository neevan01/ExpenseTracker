@{
    List<Object> MenuItems = new List<Object>();

    MenuItems.Add(new
    {
        text = "General",
        separator = true
    });
    MenuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        iconCss = "fa-solid fa-box"
    });
    MenuItems.Add(new
    {
        text = "Categories",
        url = "/Categories",
        iconCss = "fa-solid fa-folder-closed"
    });
    MenuItems.Add(new
    {
        text = "Transactions",
        url = "/Transactions",
        iconCss = "fa-solid fa-arrow-right-arrow-left"
    });

    MenuItems.Add(new
    {
        text = "Extras",
        separator = true
    });
    MenuItems.Add(new
    {
        text = "Reports",
        url = "#",
