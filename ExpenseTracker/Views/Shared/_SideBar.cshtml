        iconCss = "fa-solid fa-gear"
    });
}

<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px" target=".dock-target" enableGestures="false">
    <e-content-template>
        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/logo.svg" width="50%" alt="Alternate Text" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>
        <div class="profile-wrapper">
            <img class="profile-pic" src="~/N.png" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">Wallet App</h6>
                <span class="text-muted">Nabin Ghimire</span>
            </div>
        </div>
        <ejs-menu id="menu" items="@MenuItems" orientation="Vertical" hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        sideBar = document.getElementById("sidebar").ej2_instances[0];
        document.getElementById("sidebar-toggler").onclick = function () {
            sideBar.toggle();
        }
    });
</script>